<!-- views/createUser.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
<body>
  <h1><%= title %></h1>
  <%- include("partials/errors") %>
  <form action="/create" method="POST" style="display: flex; flex-direction: column; width: 200px">
    <label for="firstName">First Name: </label>
    <input type="text" name="firstName" id="firstName" value="<%= locals.user? user.firstName : '' %>" required>
    <label for="lastName">Last Name: </label>
    <input type="text" name="lastName" id="lastName" value="<%= locals.user? user.lastName : '' %>" required>
    <label for="email">Email: </label>
    <input type="email" name="email" id="email" value="<%= locals.user? user.email : '' %>" required>
    <label for="age">Age: </label>
    <input type="number" name="age" id="age" value="<%= locals.user? user.age : '' %>">
    <label for="age">Bio: </label>
    <textarea name="bio" id="bio" style="resize: vertical"><%= locals.user? user.bio : '' %></textarea>
    <button type="submit">Submit</button>
  </form>
  <a href="/">Back to home</a>
</body>
</html>

